{
  "compilerOptions": {
    "target": "ESNext",               
    "module": "CommonJS",             
    "lib": ["ESNext"],                
    "strict": true,                   
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true, 
    "outDir": "dist",               
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express"],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}